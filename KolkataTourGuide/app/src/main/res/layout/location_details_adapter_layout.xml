<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:padding="8dp"
    android:background="@color/colorTextIcon"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/location_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/dakhinaswar"
        android:scaleType="centerCrop"
        android:layout_marginBottom="2dp"/>

    <TextView
        android:id="@+id/location_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Dakshineswar Kali Temple"
        android:textColor="@color/colorPrimaryText"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/address_of_the_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:textColor="@color/colorSecondaryText"
        android:text="Maidan, B.B.D. Bagh, Kolkata, West Bengal 700021"
        android:textStyle="normal"/>

</LinearLayout>

