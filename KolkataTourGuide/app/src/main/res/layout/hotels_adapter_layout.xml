<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="310dp"
    android:layout_margin="10dp"
    android:padding="8dp"
    android:background="@color/colorTextIcon"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/hotel_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/westin_kolkata_rajarhat"
        android:scaleType="centerCrop"
        android:layout_marginBottom="2dp"/>

    <TextView
        android:id="@+id/hotel_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="The Westin Kolkata Rajarhat"
        android:textColor="@color/colorPrimaryText"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/hotel_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:textColor="@color/colorSecondaryText"
        android:text=" Plot No CBD 2, Action Area - II,New Town,
            \nRajarhat, Kolkata 700156 India
            \nPhone: 033 4037 1234"
        android:textStyle="normal"/>

</LinearLayout>